<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>‡§ö‡§ø‡§§‡•ç‡§∞‡§Æ‡•ç - Artist Applications</title>
    <link rel="stylesheet" href="/css/pages/admin-common.css">
    <link rel="stylesheet" href="/css/pages/admin-applications.css">
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>‡§ö‡§ø‡§§‡•ç‡§∞‡§Æ‡•ç</h2>
            <p>Art Management System</p>
        </div>
        <nav class="sidebar-nav">
            <div class="nav-item">
                <a href="/admin/dashboard" class="nav-link">
                    <span class="nav-icon">üìä</span>
                    Dashboard
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/artists" class="nav-link">
                    <span class="nav-icon">üë®‚Äçüé®</span>
                    Artists
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/artworks" class="nav-link">
                    <span class="nav-icon">üé®</span>
                    Artworks
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/orders" class="nav-link">
                    <span class="nav-icon">üì¶</span>
                    Orders
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/messages" class="nav-link">
                    <span class="nav-icon">üìß</span>
                    Messages
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/applications" class="nav-link active">
                    <span class="nav-icon">üìù</span>
                    Applications
                </a>
            </div>
        </nav>
    </div>

    <!-- Overlay for mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <header class="header">
            <button class="menu-toggle" id="menuToggle">‚ò∞</button>
            <h1 class="header-title">üìù Artist Applications</h1>
            <a href="/admin/logout" class="logout-btn">Logout</a>
        </header>

        <!-- Applications Content -->
        <div class="applications-content">
            <% if (error) { %>
                <div class="alert error" id="errorAlert">
                    <%= error %>
                </div>
            <% } %>

            <% if (success) { %>
                <div class="alert success" id="successAlert">
                    <%= success %>
                </div>
            <% } %>

            <!-- Applications Stats -->
            <div class="artists-stats-section">
                <div class="stats-header">
                    <h2 class="stats-title">
                        <% if (pageType === 'approved') { %>
                            ‚úÖ Approved Applications
                        <% } else if (pageType === 'rejected') { %>
                            ‚ùå Rejected Applications
                        <% } else { %>
                            üìù New Applications
                        <% } %>
                    </h2>
                    <div class="btn-group">
                        <a href="/admin/applications" class="btn <%= pageType === 'new' ? 'btn-view' : 'btn-archive' %>">
                            üìù New Applications
                        </a>
                        <a href="/admin/applications/approved" class="btn <%= pageType === 'approved' ? 'btn-view' : 'btn-archive' %>">
                            ‚úÖ Approved
                        </a>
                        <a href="/admin/applications/rejected" class="btn <%= pageType === 'rejected' ? 'btn-view' : 'btn-archive' %>">
                            ‚ùå Rejected
                        </a>
                    </div>
                </div>

                <% if (pageType === 'approved') { %>
                    <div class="artists-stats">
                        <div class="stat-card">
                            <div class="stat-number"><%= applications.length %></div>
                            <div class="stat-label">Approved Applications</div>
                        </div>
                    </div>
                <% } else if (pageType === 'rejected') { %>
                    <div class="artists-stats">
                        <div class="stat-card">
                            <div class="stat-number"><%= applications.length %></div>
                            <div class="stat-label">Rejected Applications</div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="artists-stats">
                        <div class="stat-card">
                            <div class="stat-number"><%= applications.filter(a => a.status === 'pending').length %></div>
                            <div class="stat-label">Pending</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-number"><%= applications.filter(a => a.status === 'under_review').length %></div>
                            <div class="stat-label">Under Review</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-number"><%= applications.length %></div>
                            <div class="stat-label">Total New</div>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Applications Grid -->
            <div class="applications-container">
                <div class="applications-grid">
                    <% if (applications.length === 0) { %>
                        <div class="application-card empty-state">
                            <h3>No applications found</h3>
                            <p class="muted-2">Artist applications will appear here when people submit them.</p>
                        </div>
                    <% } else { %>
                        <% applications.forEach(application => { %>
                            <div class="application-card" data-id="<%= application.unique_id %>">
                                <div class="application-header">
                                    <div>
                                        <div class="applicant-name"><%= application.full_name %></div>
                                        <div class="application-date"><%= new Date(application.received_date).toLocaleDateString() %></div>
                                    </div>
                                    <span class="status-badge status-<%= application.status %>"><%= application.status.replace('_', ' ') %></span>
                                </div>
                                
                                <div class="application-info">
                                    <div class="application-details">
                                        <div class="detail-item">
                                            <span class="detail-label">Age</span>
                                            <span class="detail-value"><%= application.age %> years</span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Location</span>
                                            <span class="detail-value"><%= application.city %>, <%= application.district %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Email</span>
                                            <span class="detail-value"><%= application.email %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Started Art At</span>
                                            <span class="detail-value"><%= application.started_art_at || 'Not specified' %></span>
                                        </div>
                                    </div>
                                    
                                    <% if (application.message) { %>
                                        <div class="application-preview">
                                            <strong>Message:</strong> <%= application.message.substring(0, 100) %><%= application.message.length > 100 ? '...' : '' %>
                                        </div>
                                    <% } %>
                                </div>

                                <div class="application-actions">
                                    <% if (pageType === 'approved' || pageType === 'rejected') { %>
                                        <button class="btn btn-view" onclick="viewApplication('<%= application.unique_id %>')">
                                            üëÅÔ∏è View Details
                                        </button>
                                    <% } else { %>
                                        <% if (application.status === 'pending') { %>
                                            <button class="btn btn-pending" onclick="updateStatus('<%= application.unique_id %>', 'under_review')" style="background: #ffa500; color: white;">
                                                ‚è≥ Under Review
                                            </button>
                                        <% } %>
                                        
                                        <button class="btn btn-approve" onclick="updateStatus('<%= application.unique_id %>', 'approved')" style="background: #28a745; color: white;">
                                            ‚úÖ Approve
                                        </button>
                                        
                                        <button class="btn btn-reject" onclick="updateStatus('<%= application.unique_id %>', 'rejected')" style="background: #dc3545; color: white;">
                                            ‚ùå Reject
                                        </button>
                                        
                                        <button class="btn btn-view" onclick="viewApplication('<%= application.unique_id %>')">
                                            üëÅÔ∏è View Details
                                        </button>
                                    <% } %>
                                    
                                    <button class="btn btn-delete" onclick="deleteApplication('<%= application.unique_id %>', '<%= application.full_name %>')">
                                        üóëÔ∏è Delete
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- View Application Modal -->
    <div id="viewApplicationModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Application Details</h2>
                <button class="close-btn" onclick="closeViewApplicationModal()">&times;</button>
            </div>
            
            <div id="applicationDetailsContent">
                <!-- Application details will be loaded here -->
            </div>
        </div>
    </div>

    <script>
        // Global variables
        let currentApplicationId = null;

        // Function to update application status with individual buttons
        function updateStatus(applicationId, newStatus) {
            const confirmMessage = `Are you sure you want to ${newStatus.replace('_', ' ')} this application?`;
            if (!confirm(confirmMessage)) {
                return;
            }

            fetch(`/admin/applications/${applicationId}/status`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `status=${newStatus}`
            })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Error updating status. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error updating status. Please try again.');
            });
        }

        // View application function
        async function viewApplication(applicationId) {
            currentApplicationId = applicationId;
            
            try {
                const response = await fetch(`/admin/applications/${applicationId}`);
                const data = await response.json();
                
                if (data.application) {
                    const app = data.application;
                    
                    // Build socials HTML
                    let socialsHtml = 'Not provided';
                    if (app.socials) {
                        const socials = app.socials;
                        const socialLinks = [];
                        
                        if (socials.instagram) socialLinks.push(`<a href="${socials.instagram}" class="social-link" target="_blank">Instagram</a>`);
                        if (socials.facebook) socialLinks.push(`<a href="${socials.facebook}" class="social-link" target="_blank">Facebook</a>`);
                        if (socials.twitter) socialLinks.push(`<a href="${socials.twitter}" class="social-link" target="_blank">Twitter</a>`);
                        if (socials.tiktok) socialLinks.push(`<a href="${socials.tiktok}" class="social-link" target="_blank">TikTok</a>`);
                        if (socials.youtube) socialLinks.push(`<a href="${socials.youtube}" class="social-link" target="_blank">YouTube</a>`);
                        
                        if (socialLinks.length > 0) {
                            socialsHtml = `<div class="socials-list">${socialLinks.join('')}</div>`;
                        }
                    }
                    
                    const detailsHtml = `
                        <div class="application-detail-section">
                            <h3 class="section-title">Personal Information</h3>
                            ${app.profile_picture ? `<img src="/uploads/applications/${app.profile_picture}" class="profile-picture" alt="Profile Picture">` : ''}
                            <div class="application-details">
                                <div class="detail-item">
                                    <span class="detail-label">Full Name</span>
                                    <span class="detail-value">${app.full_name}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Age</span>
                                    <span class="detail-value">${app.age} years</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Email</span>
                                    <span class="detail-value">${app.email}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Phone</span>
                                    <span class="detail-value">${app.phone || 'Not provided'}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">City</span>
                                    <span class="detail-value">${app.city}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">District</span>
                                    <span class="detail-value">${app.district}</span>
                                </div>
                            </div>
                        </div>

                        <div class="application-detail-section">
                            <h3 class="section-title">Art Background</h3>
                            <div class="application-details">
                                <div class="detail-item">
                                    <span class="detail-label">Started Art At</span>
                                    <span class="detail-value">${app.started_art_at || 'Not specified'}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">School/College</span>
                                    <span class="detail-value">${app.school_college || 'Not provided'}</span>
                                </div>
                            </div>
                        </div>

                        <div class="application-detail-section">
                            <h3 class="section-title">Social Media</h3>
                            ${socialsHtml}
                        </div>

                        ${app.bio ? `
                        <div class="application-detail-section">
                            <h3 class="section-title">Bio</h3>
                            <p style="line-height: 1.6;">${app.bio.replace(/\n/g, '<br>')}</p>
                        </div>
                        ` : ''}

                        ${app.message ? `
                        <div class="application-detail-section">
                            <h3 class="section-title">Application Message</h3>
                            <div style="background: #f8f9ff; padding: 1rem; border-radius: 8px; line-height: 1.6;">
                                ${app.message.replace(/\n/g, '<br>')}
                            </div>
                        </div>
                        ` : ''}

                        <div class="application-detail-section">
                            <h3 class="section-title">Application Status</h3>
                            <div class="application-details">
                                <div class="detail-item">
                                    <span class="detail-label">Current Status</span>
                                    <span class="status-badge status-${app.status}">${app.status.replace('_', ' ')}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Received Date</span>
                                    <span class="detail-value">${new Date(app.received_date).toLocaleString()}</span>
                                </div>
                                ${app.reviewed_by ? `
                                <div class="detail-item">
                                    <span class="detail-label">Reviewed By</span>
                                    <span class="detail-value">${app.reviewed_by}</span>
                                </div>
                                ` : ''}
                                ${app.reviewed_date ? `
                                <div class="detail-item">
                                    <span class="detail-label">Reviewed Date</span>
                                    <span class="detail-value">${new Date(app.reviewed_date).toLocaleString()}</span>
                                </div>
                                ` : ''}
                            </div>
                            ${app.rejection_reason ? `
                            <div style="margin-top: 1rem; padding: 1rem; background: #ffebee; border-radius: 8px;">
                                <strong style="color: #c62828;">Rejection Reason:</strong><br>
                                ${app.rejection_reason}
                            </div>
                            ` : ''}
                        </div>
                    `;
                    
                    document.getElementById('applicationDetailsContent').innerHTML = detailsHtml;
                    document.getElementById('viewApplicationModal').classList.add('active');
                } else {
                    showAlert('Error loading application data', 'error');
                }
            } catch (error) {
                console.error('Error fetching application:', error);
                showAlert('Error loading application data', 'error');
            }
        }

        function closeViewApplicationModal() {
            document.getElementById('viewApplicationModal').classList.remove('active');
            currentApplicationId = null;
        }

        function deleteApplication(applicationId, applicantName) {
            if (confirm(`Are you sure you want to delete the application from "${applicantName}"? This action cannot be undone.`)) {
                fetch(`/admin/applications/${applicationId}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showAlert(data.success, 'success');
                        // Remove the application card from DOM
                        const applicationCard = document.querySelector(`[data-id="${applicationId}"]`);
                        if (applicationCard) {
                            applicationCard.style.transition = 'all 0.3s ease';
                            applicationCard.style.opacity = '0';
                            applicationCard.style.transform = 'scale(0.8)';
                            setTimeout(() => {
                                applicationCard.remove();
                                // Reload to update stats
                                setTimeout(() => window.location.reload(), 1000);
                            }, 300);
                        }
                    } else {
                        showAlert(data.error || 'Error deleting application', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error deleting application:', error);
                    showAlert('Error deleting application', 'error');
                });
            }
        }

        function showAlert(message, type) {
            // Remove existing alerts
            const existingAlerts = document.querySelectorAll('.alert');
            existingAlerts.forEach(alert => alert.remove());
            
            // Create new alert
            const alert = document.createElement('div');
            alert.className = `alert ${type}`;
            alert.textContent = message;
            
            // Insert after header
            const applicationsContent = document.querySelector('.applications-content');
            applicationsContent.insertBefore(alert, applicationsContent.firstChild);
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.style.opacity = '0';
                    alert.style.transform = 'translateY(-10px)';
                    setTimeout(() => alert.remove(), 300);
                }
            }, 5000);
        }

        // Close modals when clicking outside
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('modal')) {
                if (e.target.id === 'viewApplicationModal') {
                    closeViewApplicationModal();
                }
            }
        });

        // Close modals with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeViewApplicationModal();
            }
        });

        // Sidebar toggle functionality
        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');

        menuToggle.addEventListener('click', function() {
            sidebar.classList.toggle('active');
            sidebarOverlay.classList.toggle('active');
        });

        sidebarOverlay.addEventListener('click', function() {
            sidebar.classList.remove('active');
            sidebarOverlay.classList.remove('active');
        });

        // Auto-hide alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                if (alert) {
                    alert.style.opacity = '0';
                    alert.style.transform = 'translateY(-10px)';
                    setTimeout(() => alert.remove(), 300);
                }
            });
        }, 5000);
    </script>
</body>
</html>
