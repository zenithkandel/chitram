<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>चित्रम् - Online Art Platform</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <!-- Logo -->
            <a href="/" class="logo">चित्रम्</a>
            
            <!-- Navigation Menu -->
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="/" class="nav-link">
                        <i class="fas fa-home"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/about" class="nav-link">
                        <i class="fas fa-info-circle"></i> About
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/apply" class="nav-link">
                        <i class="fas fa-user-plus"></i> Apply
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/artists" class="nav-link">
                        <i class="fas fa-palette"></i> Artists
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/gallery" class="nav-link">
                        <i class="fas fa-images"></i> Gallery
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/cart" class="nav-link">
                        <i class="fas fa-shopping-cart"></i> Cart
                        <span id="cart-count" class="cart-count" style="display: none;">0</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/track" class="nav-link">
                        <i class="fas fa-shipping-fast"></i> Track Orders
                    </a>
                </li>
            </ul>
            
            <!-- Mobile Menu Toggle -->
            <div class="mobile-menu-toggle">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Hero Section -->
        <section class="hero-section">
            <h1 class="hero-title">Welcome to चित्रम्</h1>
            <p class="hero-subtitle">Discover and Purchase Beautiful Artworks from Talented Artists</p>
            <a href="/gallery" class="cta-button">
                <i class="fas fa-images"></i> Explore Gallery
            </a>
        </section>

        <!-- Statistics Section -->
        <section class="stats-section">
            <div class="container">
                <div class="stats-grid">
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="fas fa-eye"></i>
                        </div>
                        <div class="stats-content">
                            <h3 class="stats-number"><%= dailyViews %></h3>
                            <p class="stats-label">Today's Views</p>
                        </div>
                    </div>
                    
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stats-content">
                            <h3 class="stats-number"><%= totalArtists %></h3>
                            <p class="stats-label">Active Artists</p>
                        </div>
                    </div>
                    
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="fas fa-palette"></i>
                        </div>
                        <div class="stats-content">
                            <h3 class="stats-number"><%= totalArts %></h3>
                            <p class="stats-label">Listed Artworks</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Latest Artworks Section -->
        <section class="latest-artworks-section">
            <div class="container">
                <h3 class="text-center mb-2">Latest Artworks</h3>
                <div class="artworks-grid">
                    <% if (latestArtworks && latestArtworks.length > 0) { %>
                        <% latestArtworks.forEach(artwork => { %>
                            <div class="artwork-card">
                                <div class="artwork-image">
                                    <img src="/uploads/artworks/<%= artwork.art_image %>" 
                                         alt="<%= artwork.art_name %>" 
                                         onerror="this.src='/images/placeholder-artwork.jpg'">
                                </div>
                                <div class="artwork-info">
                                    <h4 class="artwork-title"><%= artwork.art_name %></h4>
                                    <p class="artwork-artist">by <%= artwork.artist_name %></p>
                                    <p class="artwork-category"><%= artwork.art_category %></p>
                                    <p class="artwork-price">Rs. <%= artwork.cost %></p>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="no-artworks">
                            <p>No artworks available at the moment.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </section>

        <!-- Quick Links Section -->
        <section class="quick-links-section">
            <div class="container">
                <h3 class="text-center mb-2">Quick Access</h3>
                <div class="quick-links-grid">
                    <div class="quick-link-card">
                        <a href="/gallery" class="quick-link">
                            <i class="fas fa-images fa-3x"></i>
                            <h4>Browse Gallery</h4>
                            <p>Explore our collection of beautiful artworks</p>
                        </a>
                    </div>
                    
                    <div class="quick-link-card">
                        <a href="/artists" class="quick-link">
                            <i class="fas fa-palette fa-3x"></i>
                            <h4>Meet Artists</h4>
                            <p>Discover talented artists and their stories</p>
                        </a>
                    </div>
                    
                    <div class="quick-link-card">
                        <a href="/apply" class="quick-link">
                            <i class="fas fa-user-plus fa-3x"></i>
                            <h4>Join as Artist</h4>
                            <p>Apply to showcase your artwork on our platform</p>
                        </a>
                    </div>
                    
                    <div class="quick-link-card">
                        <a href="/track" class="quick-link">
                            <i class="fas fa-shipping-fast fa-3x"></i>
                            <h4>Track Orders</h4>
                            <p>Check the status of your art purchases</p>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="features-section mt-2">
            <div class="container">
                <h3 class="text-center mb-2">Why Choose चित्रम्?</h3>
                <div class="features-grid">
                    <div class="feature-item">
                        <i class="fas fa-shield-alt fa-2x"></i>
                        <h4>Secure Transactions</h4>
                        <p>Safe and secure payment processing for all purchases</p>
                    </div>
                    
                    <div class="feature-item">
                        <i class="fas fa-star fa-2x"></i>
                        <h4>Quality Artworks</h4>
                        <p>Curated collection of high-quality artworks from verified artists</p>
                    </div>
                    
                    <div class="feature-item">
                        <i class="fas fa-truck fa-2x"></i>
                        <h4>Fast Delivery</h4>
                        <p>Quick and careful delivery of your purchased artworks</p>
                    </div>
                    
                    <div class="feature-item">
                        <i class="fas fa-headset fa-2x"></i>
                        <h4>Customer Support</h4>
                        <p>Dedicated support team to help with your queries</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 चित्रम् - Online Art Platform. All rights reserved.</p>
            <p>
                <a href="/admin" style="color: #bdc3c7; text-decoration: none;">
                    <i class="fas fa-user-shield"></i> Admin Panel
                </a>
            </p>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="/js/main.js"></script>
</body>
</html>
