        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 ‡§ö‡§ø‡§§‡•ç‡§∞‡§Æ‡•ç - Online Art Gallery. All rights reserved.</p>
            <p>Where Art Meets Technology üé®</p>
        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-toggle').addEventListener('click', function() {
            const navMenu = document.getElementById('nav-menu');
            navMenu.classList.toggle('active');
        });

        // Cart functionality
        class Cart {
            constructor() {
                this.items = JSON.parse(localStorage.getItem('chitram_cart') || '[]');
                this.updateCartCount();
            }

            addItem(artId, artName, artPrice, artImage, artistName) {
                const existingItem = this.items.find(item => item.art_id === artId);
                
                if (!existingItem) {
                    this.items.push({
                        art_id: artId,
                        art_name: artName,
                        cost: artPrice,
                        art_image: artImage,
                        artist_name: artistName,
                        added_at: new Date().toISOString()
                    });
                    
                    this.saveCart();
                    this.updateCartCount();
                    this.showNotification('Added to cart!', 'success');
                } else {
                    this.showNotification('Item already in cart!', 'info');
                }
            }

            removeItem(artId) {
                this.items = this.items.filter(item => item.art_id !== artId);
                this.saveCart();
                this.updateCartCount();
                this.showNotification('Removed from cart!', 'success');
            }

            getItems() {
                return this.items;
            }

            getTotalAmount() {
                return this.items.reduce((total, item) => total + parseFloat(item.cost), 0);
            }

            clearCart() {
                this.items = [];
                this.saveCart();
                this.updateCartCount();
            }

            saveCart() {
                localStorage.setItem('chitram_cart', JSON.stringify(this.items));
            }

            updateCartCount() {
                const countElement = document.getElementById('cart-count');
                if (countElement) {
                    countElement.textContent = this.items.length;
                    countElement.style.display = this.items.length > 0 ? 'block' : 'none';
                }
            }

            showNotification(message, type = 'info') {
                // Create notification element
                const notification = document.createElement('div');
                notification.className = `alert alert-${type === 'success' ? 'success' : 'error'}`;
                notification.style.position = 'fixed';
                notification.style.top = '100px';
                notification.style.right = '20px';
                notification.style.zIndex = '9999';
                notification.style.minWidth = '250px';
                notification.textContent = message;

                document.body.appendChild(notification);

                // Remove after 3 seconds
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 3000);
            }
        }

        // Initialize cart
        window.cart = new Cart();

        // Add to cart function
        window.addToCart = function(artId, artName, artPrice, artImage, artistName) {
            window.cart.addItem(artId, artName, artPrice, artImage, artistName);
        };

        // Search functionality
        let searchTimeout;
        window.searchArts = function(query) {
            clearTimeout(searchTimeout);
            
            if (query.length < 2) {
                hideSearchResults();
                return;
            }

            searchTimeout = setTimeout(() => {
                fetch(`/api/arts/search?q=${encodeURIComponent(query)}`)
                    .then(response => response.json())
                    .then(data => {
                        showSearchResults(data.arts);
                    })
                    .catch(error => {
                        console.error('Search error:', error);
                    });
            }, 300);
        };

        window.showSearchResults = function(arts) {
            const resultsContainer = document.querySelector('.search-results');
            if (!resultsContainer) return;

            if (arts.length === 0) {
                resultsContainer.innerHTML = '<div class="search-result-item">No arts found</div>';
            } else {
                resultsContainer.innerHTML = arts.map(art => `
                    <div class="search-result-item" onclick="window.location.href='/art/${art.unique_id}'">
                        <img src="/uploads/artworks/${art.art_image}" alt="${art.art_name}" class="search-result-image">
                        <div>
                            <div style="font-weight: bold;">${art.art_name}</div>
                            <div style="color: #666; font-size: 0.9rem;">by ${art.artist_name}</div>
                            <div style="color: #667eea; font-weight: bold;">Rs. ${art.cost}</div>
                        </div>
                    </div>
                `).join('');
            }
            
            resultsContainer.style.display = 'block';
        };

        window.hideSearchResults = function() {
            const resultsContainer = document.querySelector('.search-results');
            if (resultsContainer) {
                resultsContainer.style.display = 'none';
            }
        };

        // Hide search results when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.search-container')) {
                hideSearchResults();
            }
        });

        // Form submission helper
        window.submitForm = function(formId, endpoint, successCallback) {
            const form = document.getElementById(formId);
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);

            fetch(endpoint, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (successCallback) {
                        successCallback(data);
                    } else {
                        window.cart.showNotification(data.success, 'success');
                        form.reset();
                    }
                } else {
                    window.cart.showNotification(data.error, 'error');
                }
            })
            .catch(error => {
                console.error('Form submission error:', error);
                window.cart.showNotification('An error occurred. Please try again.', 'error');
            });
        };

        // Load more functionality
        window.loadMoreArts = function(currentPage, buttonId) {
            const button = document.getElementById(buttonId);
            const originalText = button.textContent;
            button.innerHTML = '<span class="loading"></span> Loading...';
            button.disabled = true;

            fetch(`/api/arts/load-more?page=${currentPage}`)
                .then(response => response.json())
                .then(data => {
                    if (data.arts && data.arts.length > 0) {
                        const container = document.querySelector('.art-grid');
                        const artsHtml = data.arts.map(art => `
                            <div class="art-card">
                                <img src="/uploads/artworks/${art.art_image}" alt="${art.art_name}" class="art-image">
                                <div class="art-info">
                                    <div class="art-title">${art.art_name}</div>
                                    <div class="art-artist">by ${art.artist_name}</div>
                                    <div class="art-price">Rs. ${art.cost}</div>
                                    <div class="art-meta">
                                        <span>${art.size_of_art || 'Size not specified'}</span>
                                        <span>${art.color_type === 'color' ? 'Color' : 'B&W'}</span>
                                    </div>
                                    <a href="/art/${art.unique_id}" class="btn btn-outline" style="margin-right: 0.5rem;">View Details</a>
                                    <button onclick="addToCart('${art.unique_id}', '${art.art_name}', '${art.cost}', '${art.art_image}', '${art.artist_name}')" class="btn">Add to Cart</button>
                                </div>
                            </div>
                        `).join('');
                        
                        container.insertAdjacentHTML('beforeend', artsHtml);
                        
                        if (!data.hasMore) {
                            button.style.display = 'none';
                        } else {
                            button.onclick = () => loadMoreArts(currentPage + 1, buttonId);
                        }
                    } else {
                        button.style.display = 'none';
                    }
                })
                .catch(error => {
                    console.error('Load more error:', error);
                    window.cart.showNotification('Error loading more arts', 'error');
                })
                .finally(() => {
                    button.textContent = originalText;
                    button.disabled = false;
                });
        };
    </script>
</body>
</html>
