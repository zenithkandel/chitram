<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - चित्रम्</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <div class="nav-brand">
                <a href="/">
                    <h1>चित्रम्</h1>
                    <span>Art Gallery</span>
                </a>
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/artists" class="active">Artists</a></li>
                <li><a href="/gallery">Gallery</a></li>
                <li><a href="/apply">Apply</a></li>
                <li><a href="/track-orders">Track Orders</a></li>
                <li><a href="/cart">Cart</a></li>
            </ul>
        </div>
    </nav>

    <!-- Artist Profile Section -->
    <section class="artist-profile-section">
        <div class="container">
            <!-- Artist Header -->
            <div class="artist-header">
                <div class="artist-image">
                    <img src="<%= artist.profile_image %>" alt="<%= artist.name %>" 
                         onerror="this.src='/images/default-artist.jpg'">
                </div>
                <div class="artist-info">
                    <h1><%= artist.name %></h1>
                    <p class="artist-specialty"><%= artist.specialty %></p>
                    <div class="artist-stats">
                        <div class="stat">
                            <i class="fas fa-palette"></i>
                            <span><%= artworkCount %> Artworks</span>
                        </div>
                        <div class="stat">
                            <i class="fas fa-calendar"></i>
                            <span><%= artist.experience_years %> Years Experience</span>
                        </div>
                        <div class="stat">
                            <i class="fas fa-star"></i>
                            <span><%= artist.artistic_style %></span>
                        </div>
                    </div>
                    <div class="artist-contact">
                        <a href="mailto:<%= artist.email %>" class="contact-btn">
                            <i class="fas fa-envelope"></i>
                            Contact Artist
                        </a>
                    </div>
                </div>
            </div>

            <!-- Artist Details -->
            <div class="artist-details">
                <div class="details-grid">
                    <!-- Biography Section -->
                    <div class="detail-section">
                        <h3><i class="fas fa-user"></i> Biography</h3>
                        <p><%= artist.bio %></p>
                    </div>

                    <!-- Education Section -->
                    <div class="detail-section">
                        <h3><i class="fas fa-graduation-cap"></i> Education</h3>
                        <p><%= artist.education %></p>
                    </div>

                    <!-- Awards Section -->
                    <div class="detail-section">
                        <h3><i class="fas fa-trophy"></i> Awards & Recognition</h3>
                        <p><%= artist.awards %></p>
                    </div>

                    <!-- Exhibition History -->
                    <div class="detail-section">
                        <h3><i class="fas fa-calendar-alt"></i> Exhibition History</h3>
                        <p><%= artist.exhibition_history %></p>
                    </div>
                </div>
            </div>

            <!-- Artist's Artworks -->
            <div class="artist-artworks">
                <div class="section-header">
                    <h2>Artworks by <%= artist.name %></h2>
                    <p>Explore the creative collection of this talented artist</p>
                </div>

                <% if (artworks.length > 0) { %>
                    <div class="artworks-grid">
                        <% artworks.forEach(artwork => { %>
                            <div class="artwork-card">
                                <div class="artwork-image">
                                    <img src="<%= artwork.image_url %>" alt="<%= artwork.title %>" 
                                         onerror="this.src='/images/placeholder-art.jpg'">
                                    <div class="artwork-overlay">
                                        <button class="view-btn" onclick="viewArtwork('<%= artwork.id %>')">
                                            <i class="fas fa-eye"></i>
                                            View Details
                                        </button>
                                    </div>
                                </div>
                                <div class="artwork-info">
                                    <h3><%= artwork.title %></h3>
                                    <p class="artwork-category"><%= artwork.category %></p>
                                    <p class="artwork-medium"><%= artwork.medium %></p>
                                    <% if (artwork.dimensions) { %>
                                        <p class="artwork-dimensions"><%= artwork.dimensions %></p>
                                    <% } %>
                                    <div class="artwork-footer">
                                        <span class="price">₹<%= artwork.formatted_price %></span>
                                        <button class="add-to-cart-btn" onclick="addToCart('<%= artwork.id %>')">
                                            <i class="fas fa-shopping-cart"></i>
                                            Add to Cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="no-artworks">
                        <i class="fas fa-palette"></i>
                        <h3>No Artworks Available</h3>
                        <p>This artist hasn't uploaded any artworks yet.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 चित्रम् Art Gallery. All rights reserved.</p>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="/js/main.js"></script>
    <script>
        function viewArtwork(artworkId) {
            // Placeholder for artwork detail view
            alert('Artwork detail view coming soon! Artwork ID: ' + artworkId);
        }

        function addToCart(artworkId) {
            // Placeholder for add to cart functionality
            alert('Add to cart functionality coming soon! Artwork ID: ' + artworkId);
        }
    </script>
</body>
</html>
