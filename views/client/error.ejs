<!-- Error Hero Section -->
<section class="hero" style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); padding: 4rem 0; color: white; text-align: center;">
    <div class="container">
        <div style="font-size: 6rem; margin-bottom: 1rem; opacity: 0.8;">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h1 style="font-size: 2.5rem; margin-bottom: 1rem;">Oops! Something went wrong</h1>
        <p style="font-size: 1.2rem; opacity: 0.9; max-width: 600px; margin: 0 auto;">
            We're sorry, but there was an error processing your request.
        </p>
    </div>
</section>

<!-- Error Details -->
<section class="container">
    <div class="card" style="text-align: center; max-width: 600px; margin: 0 auto;">
        <% if (error) { %>
            <div style="background: #fff3cd; border: 1px solid #ffeaa7; padding: 1.5rem; border-radius: 10px; margin-bottom: 2rem;">
                <h3 style="color: #856404; margin-bottom: 1rem;">Error Details</h3>
                <p style="color: #856404; margin: 0;"><%= error %></p>
            </div>
        <% } %>
        
        <h2 style="color: #333; margin-bottom: 1.5rem;">What can you do?</h2>
        
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; margin-bottom: 2rem;">
            <div style="text-align: center;">
                <div style="font-size: 2.5rem; color: #667eea; margin-bottom: 1rem;">
                    <i class="fas fa-home"></i>
                </div>
                <h4 style="margin-bottom: 0.5rem;">Go Home</h4>
                <p style="color: #666; font-size: 0.9rem;">Return to our homepage and start fresh</p>
            </div>
            
            <div style="text-align: center;">
                <div style="font-size: 2.5rem; color: #43e97b; margin-bottom: 1rem;">
                    <i class="fas fa-search"></i>
                </div>
                <h4 style="margin-bottom: 0.5rem;">Browse Arts</h4>
                <p style="color: #666; font-size: 0.9rem;">Explore our collection of amazing artworks</p>
            </div>
            
            <div style="text-align: center;">
                <div style="font-size: 2.5rem; color: #f093fb; margin-bottom: 1rem;">
                    <i class="fas fa-envelope"></i>
                </div>
                <h4 style="margin-bottom: 0.5rem;">Contact Us</h4>
                <p style="color: #666; font-size: 0.9rem;">Let us know if you need help</p>
            </div>
        </div>
        
        <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
            <a href="/" class="btn" style="text-decoration: none;">
                <i class="fas fa-home" style="margin-right: 0.5rem;"></i>
                Go to Homepage
            </a>
            
            <a href="/arts" class="btn btn-outline" style="text-decoration: none;">
                <i class="fas fa-palette" style="margin-right: 0.5rem;"></i>
                Browse Artworks
            </a>
            
            <a href="/about" class="btn btn-outline" style="text-decoration: none;">
                <i class="fas fa-envelope" style="margin-right: 0.5rem;"></i>
                Contact Support
            </a>
        </div>
    </div>
</section>

<!-- Go Back Button -->
<section class="container">
    <div style="text-align: center;">
        <button onclick="window.history.back()" class="btn btn-outline" style="margin-top: 1rem;">
            <i class="fas fa-arrow-left" style="margin-right: 0.5rem;"></i>
            Go Back to Previous Page
        </button>
    </div>
</section>
