<!-- Contact Section -->
<section class="container">
    <div class="card">
        <h2 style="text-align: center; margin-bottom: 2rem; color: #333;">Get in Touch</h2>
        
        <% if (error) { %>
            <div class="alert alert-error"><%= error %></div>
        <% } %>
        
        <% if (success) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>

        <div style="max-width: 600px; margin: 0 auto;">
            <p style="text-align: center; margin-bottom: 2rem; color: #666;">
                Have questions, suggestions, or want to learn more about ‡§ö‡§ø‡§§‡•ç‡§∞‡§Æ‡•ç? We'd love to hear from you!
            </p>

            <form id="contact-form" onsubmit="event.preventDefault(); submitContactForm();">
                <div class="form-group">
                    <label class="form-label">Full Name *</label>
                    <input type="text" name="full_name" class="form-input" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Email Address *</label>
                    <input type="email" name="email" class="form-input" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Phone Number</label>
                    <input type="tel" name="phone" class="form-input">
                </div>

                <div class="form-group">
                    <label class="form-label">Subject *</label>
                    <input type="text" name="subject" class="form-input" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Message *</label>
                    <textarea name="message" class="form-input form-textarea" required placeholder="Tell us how we can help you..."></textarea>
                </div>

                <div style="text-align: center;">
                    <button type="submit" class="btn" id="contact-submit-btn">Send Message</button>
                </div>
            </form>
        </div>
    </div>
</section>

