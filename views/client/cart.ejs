<script>
    // Cart functionality
    let cart = JSON.parse(localStorage.getItem('chitram_cart')) || [];
    
    // Initialize cart on page load
    document.addEventListener('DOMContentLoaded', function() {
        updateNavCartCount();
        loadCartItems();
        loadRecommendedArts();
        updateCartSummary();
        initScrollEffects();
        initPageAnimations();
    });
    
    // Page animations
    function initPageAnimations() {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animationDelay = '0s';
                    entry.target.classList.add('fade-in');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.cart-item, .recommended-item').forEach(el => {
            observer.observe(el);
        });
    }
    
    // Navigation scroll effects
    function initScrollEffects() {
        const navbar = document.getElementById('navbar');
        
        window.addEventListener('scroll', () => {
            if (window.scrollY > 100) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
    }
    
    // Update navigation cart count
    function updateNavCartCount() {
        const count = cart.reduce((total, item) => total + item.quantity, 0);
        const countElement = document.getElementById('nav-cart-count');
        countElement.textContent = count;
        
        if (count > 0) {
            countElement.style.display = 'flex';
        } else {
            countElement.style.display = 'none';
        }
    }
    
    // Load cart items
    async function loadCartItems() {
        const container = document.getElementById('cart-items-container');
        const emptyCart = document.getElementById('empty-cart');
        
        if (cart.length === 0) {
            container.style.display = 'none';
            emptyCart.style.display = 'block';
            return;
        }
        
        container.style.display = 'block';
        emptyCart.style.display = 'none';
        
        // Show loading state
        container.innerHTML = '<div style="text-align: center; padding: 2rem;"><div class="loading"></div></div>';
        
        // Get artwork details for cart items
        const artworkIds = cart.map(item => item.id).join(',');
        
        try {
            const response = await fetch('/api/arts/details?ids=' + artworkIds);
            const artworks = await response.json();
            
            container.innerHTML = '';
            
            artworks.forEach((artwork, index) => {
                const cartItem = cart.find(item => item.id == artwork.id);
                const itemElement = createCartItemElement(artwork, cartItem.quantity);
                itemElement.style.animationDelay = (index * 0.1) + 's';
                container.appendChild(itemElement);
            });
            
        } catch (error) {
            console.error('Error loading cart items:', error);
            container.innerHTML = '<div class="card" style="text-align: center; color: #ef4444; padding: 2rem;"><i class="fas fa-exclamation-triangle" style="font-size: 2rem; margin-bottom: 1rem;"></i><p>Error loading cart items</p></div>';
        }
    }
    
    // Create cart item element
    function createCartItemElement(artwork, quantity) {
        const div = document.createElement('div');
        div.className = 'cart-item fade-in';
        
        const imageUrl = '/uploads/' + (artwork.image || 'placeholder.jpg');
        const artworkUrl = '/art/' + artwork.id;
        const artistUrl = '/artist/' + artwork.artist_id;
        
        div.innerHTML = 
            '<div style="flex-shrink: 0;">' +
                '<img src="' + imageUrl + '" ' +
                     'alt="' + artwork.title + '"' +
                     'onerror="this.src=\'/images/placeholder.jpg\'">' +
            '</div>' +
            
            '<div style="flex: 1; display: flex; flex-direction: column;">' +
                '<div style="flex: 1;">' +
                    '<h4 style="margin: 0 0 0.5rem 0; color: #333; font-family: \'Playfair Display\', serif; font-size: 1.3rem;">' +
                        '<a href="' + artworkUrl + '" style="text-decoration: none; color: inherit; transition: color 0.3s ease;" ' +
                           'onmouseover="this.style.color=\'#667eea\'" onmouseout="this.style.color=\'inherit\'">' +
                            artwork.title +
                        '</a>' +
                    '</h4>' +
                    
                    '<p style="margin: 0 0 0.5rem 0; color: #666; font-size: 1rem;">' +
                        'By <a href="' + artistUrl + '" style="color: #667eea; text-decoration: none; transition: color 0.3s ease; font-weight: 500;">' + artwork.artist_name + '</a>' +
                    '</p>' +
                    
                    '<p style="margin: 0 0 1rem 0; color: #94a3b8; font-size: 0.9rem;">' +
                        'Size: ' + (artwork.size_of_art || 'Not specified') +
                    '</p>' +
                '</div>' +
                
                '<div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">' +
                    '<div style="display: flex; align-items: center; gap: 1rem;">' +
                        '<div class="quantity-controls">' +
                            '<button onclick="updateQuantity(' + artwork.id + ', -1)" title="Decrease quantity">' +
                                '<i class="fas fa-minus"></i>' +
                            '</button>' +
                            '<span class="quantity-display" id="qty-' + artwork.id + '">' + quantity + '</span>' +
                            '<button onclick="updateQuantity(' + artwork.id + ', 1)" title="Increase quantity">' +
                                '<i class="fas fa-plus"></i>' +
                            '</button>' +
                        '</div>' +
                        
                        '<button onclick="removeFromCart(' + artwork.id + ')" ' +
                                'class="btn-outline" style="padding: 0.5rem; color: #ef4444; border-color: #ef4444; border-radius: 10px;"' +
                                'title="Remove from cart">' +
                            '<i class="fas fa-trash"></i>' +
                        '</button>' +
                    '</div>' +
                    
                    '<div style="text-align: right;">' +
                        '<div style="font-size: 1.4rem; font-weight: bold; color: #333; font-family: \'Playfair Display\', serif;">' +
                            'रू ' + (artwork.price * quantity).toLocaleString() +
                        '</div>' +
                        '<div style="color: #666; font-size: 0.9rem;">' +
                            'रू ' + artwork.price.toLocaleString() + ' each' +
                        '</div>' +
                    '</div>' +
                '</div>' +
            '</div>';
        
        return div;
    }
    
    // Update quantity with animation
    function updateQuantity(artworkId, change) {
        const cartItem = cart.find(item => item.id == artworkId);
        if (cartItem) {
            const newQuantity = Math.max(1, cartItem.quantity + change);
            cartItem.quantity = newQuantity;
            localStorage.setItem('chitram_cart', JSON.stringify(cart));
            
            const qtyElement = document.getElementById('qty-' + artworkId);
            qtyElement.textContent = newQuantity;
            
            // Add bounce animation
            qtyElement.style.transform = 'scale(1.3)';
            qtyElement.style.color = '#667eea';
            setTimeout(() => {
                qtyElement.style.transform = 'scale(1)';
                qtyElement.style.color = '#333';
            }, 200);
            
            updateCartSummary();
            updateNavCartCount();
            
            // Reload cart items to update totals
            setTimeout(() => loadCartItems(), 100);
        }
    }
    
    // Remove from cart with confirmation
    function removeFromCart(artworkId) {
        if (confirm('Remove this item from your cart?')) {
            const itemElement = document.querySelector('[onclick*="' + artworkId + '"]').closest('.cart-item');
            
            // Add exit animation
            itemElement.style.transform = 'translateX(-100%)';
            itemElement.style.opacity = '0';
            
            setTimeout(() => {
                cart = cart.filter(item => item.id != artworkId);
                localStorage.setItem('chitram_cart', JSON.stringify(cart));
                
                loadCartItems();
                updateCartSummary();
                updateNavCartCount();
                
                showNotification('Item removed from cart', 'success');
            }, 300);
        }
    }
    
    // Clear cart with confirmation
    function clearCart() {
        if (cart.length === 0) return;
        
        if (confirm('Are you sure you want to clear your cart?')) {
            cart = [];
            localStorage.setItem('chitram_cart', JSON.stringify(cart));
            
            loadCartItems();
            updateCartSummary();
            updateNavCartCount();
            
            showNotification('Cart cleared successfully!', 'success');
        }
    }
    
    // Update cart summary with animations
    async function updateCartSummary() {
        const countElement = document.getElementById('cart-count');
        const subtotalElement = document.getElementById('subtotal');
        const totalElement = document.getElementById('total');
        const checkoutBtn = document.getElementById('checkout-btn');
        
        const itemCount = cart.reduce((total, item) => total + item.quantity, 0);
        countElement.textContent = itemCount;
        
        if (itemCount === 0) {
            subtotalElement.textContent = 'रू 0';
            totalElement.textContent = 'रू 50';
            checkoutBtn.disabled = true;
            checkoutBtn.innerHTML = '<i class="fas fa-shopping-cart"></i> Cart is Empty';
            return;
        }
        
        // Calculate subtotal
        try {
            const artworkIds = cart.map(item => item.id).join(',');
            const response = await fetch('/api/arts/details?ids=' + artworkIds);
            const artworks = await response.json();
            
            let subtotal = 0;
            artworks.forEach(artwork => {
                const cartItem = cart.find(item => item.id == artwork.id);
                subtotal += artwork.price * cartItem.quantity;
            });
            
            const platformFee = 50;
            const total = subtotal + platformFee;
            
            // Animate number changes
            animateValue(subtotalElement, 0, subtotal, 500, 'रू ');
            animateValue(totalElement, 0, total, 500, 'रू ');
            
            checkoutBtn.disabled = false;
            checkoutBtn.innerHTML = '<i class="fas fa-credit-card"></i> Proceed to Checkout';
            
        } catch (error) {
            console.error('Error calculating total:', error);
            checkoutBtn.disabled = true;
        }
    }
    
    // Animate number values
    function animateValue(element, start, end, duration, prefix = '') {
        const range = end - start;
        const startTime = performance.now();
        
        function updateValue(currentTime) {
            const elapsed = currentTime - startTime;
            const progress = Math.min(elapsed / duration, 1);
            const current = Math.floor(start + (range * progress));
            
            element.textContent = prefix + current.toLocaleString();
            
            if (progress < 1) {
                requestAnimationFrame(updateValue);
            }
        }
        
        requestAnimationFrame(updateValue);
    }
    
    // Load recommended artworks
    async function loadRecommendedArts() {
        try {
            const response = await fetch('/api/arts/recommended?limit=4');
            const artworks = await response.json();
            
            const container = document.getElementById('recommended-arts');
            container.innerHTML = '';
            
            artworks.forEach((artwork, index) => {
                const artElement = createRecommendedArtElement(artwork);
                artElement.style.animationDelay = (index * 0.1 + 0.3) + 's';
                container.appendChild(artElement);
            });
            
        } catch (error) {
            console.error('Error loading recommended arts:', error);
            document.getElementById('recommended-arts').innerHTML = 
                '<div class="card" style="grid-column: 1/-1; text-align: center; padding: 2rem; color: #666;">' +
                '<i class="fas fa-palette" style="font-size: 2rem; margin-bottom: 1rem; opacity: 0.5;"></i>' +
                '<p>Unable to load recommendations</p></div>';
        }
    }
    
    // Create recommended art element
    function createRecommendedArtElement(artwork) {
        const div = document.createElement('div');
        div.className = 'recommended-item fade-in';
        
        const imageUrl = '/uploads/' + (artwork.image || 'placeholder.jpg');
        const artworkUrl = '/art/' + artwork.id;
        
        div.innerHTML = 
            '<div class="card">' +
                '<div class="recommended-image">' +
                    '<img src="' + imageUrl + '" ' +
                         'alt="' + artwork.title + '"' +
                         'onerror="this.src=\'/images/placeholder.jpg\'">' +
                    
                    '<div class="price-tag">' +
                        'रू ' + artwork.price.toLocaleString() +
                    '</div>' +
                '</div>' +
                
                '<div style="padding: 1.5rem; flex: 1; display: flex; flex-direction: column;">' +
                    '<h4 style="margin: 0 0 0.5rem 0; color: #333; font-size: 1.1rem; font-family: \'Playfair Display\', serif; flex: 1;">' +
                        '<a href="' + artworkUrl + '" style="text-decoration: none; color: inherit; transition: color 0.3s ease;" ' +
                           'onmouseover="this.style.color=\'#667eea\'" onmouseout="this.style.color=\'inherit\'">' +
                            artwork.title +
                        '</a>' +
                    '</h4>' +
                    
                    '<p style="color: #666; font-size: 0.9rem; margin: 0 0 1.5rem 0;">' +
                        'By ' + artwork.artist_name +
                    '</p>' +
                    
                    '<button onclick="addRecommendedToCart(' + artwork.id + ')" class="btn" style="width: 100%; font-size: 0.9rem;">' +
                        '<i class="fas fa-plus"></i>' +
                        'Add to Cart' +
                    '</button>' +
                '</div>' +
            '</div>';
        
        return div;
    }
    
    // Add recommended artwork to cart
    function addRecommendedToCart(artworkId) {
        const existingItem = cart.find(item => item.id == artworkId);
        
        if (existingItem) {
            existingItem.quantity++;
            showNotification('Quantity updated in cart!', 'success');
        } else {
            cart.push({ id: artworkId, quantity: 1 });
            showNotification('Added to cart!', 'success');
        }
        
        localStorage.setItem('chitram_cart', JSON.stringify(cart));
        
        loadCartItems();
        updateCartSummary();
        updateNavCartCount();
    }
    
    // Enhanced notification system
    function showNotification(message, type = 'info') {
        const container = document.getElementById('notification-container');
        const notification = document.createElement('div');
        
        const icons = {
            success: 'fas fa-check-circle',
            error: 'fas fa-exclamation-circle',
            info: 'fas fa-info-circle',
            warning: 'fas fa-exclamation-triangle'
        };
        
        const colors = {
            success: '#10b981',
            error: '#ef4444',
            info: '#667eea',
            warning: '#f59e0b'
        };
        
        notification.style.cssText = `
            background: ${colors[type]};
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            margin-bottom: 0.5rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            animation: slideInRight 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
            max-width: 350px;
        `;
        
        notification.innerHTML = `
            <i class="${icons[type]}"></i>
            <span>${message}</span>
        `;
        
        container.appendChild(notification);
        
        setTimeout(() => {
            notification.style.animation = 'slideOutRight 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
            setTimeout(() => {
                if (container.contains(notification)) {
                    container.removeChild(notification);
                }
            }, 300);
        }, 3000);
    }
    
    // Proceed to checkout
    function proceedToCheckout() {
        if (cart.length === 0) {
            showNotification('Your cart is empty!', 'warning');
            return;
        }
        
        // Add loading state
        const btn = document.getElementById('checkout-btn');
        const originalContent = btn.innerHTML;
        btn.innerHTML = '<div class="loading"></div> Processing...';
        btn.disabled = true;
        
        setTimeout(() => {
            window.location.href = '/checkout';
        }, 500);
    }
</script>

