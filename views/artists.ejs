<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artists - ‡§ö‡§ø‡§§‡•ç‡§∞‡§Æ‡•ç Art Platform</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">‡§ö‡§ø‡§§‡•ç‡§∞‡§Æ‡•ç</a>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="/" class="nav-link">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/about" class="nav-link">About</a>
                </li>
                <li class="nav-item">
                    <a href="/apply" class="nav-link">Apply</a>
                </li>
                <li class="nav-item">
                    <a href="/artists" class="nav-link active">Artists</a>
                </li>
                <li class="nav-item">
                    <a href="/gallery" class="nav-link">Gallery</a>
                </li>
                <li class="nav-item">
                    <a href="/cart" class="nav-link">Cart</a>
                </li>
                <li class="nav-item">
                    <a href="/track-orders" class="nav-link">Track Orders</a>
                </li>
            </ul>
            <div class="nav-toggle" id="mobile-menu">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <h1>Our Artists</h1>
            <p>Discover talented artists from ‡§ö‡§ø‡§§‡•ç‡§∞‡§Æ‡•ç community.</p>

            <!-- Search Bar -->
            <div class="search-container">
                <div class="search-bar">
                    <input type="text" 
                           id="searchInput" 
                           placeholder="Search artists by name or bio..." 
                           autocomplete="off">
                    <button type="button" id="searchBtn" class="search-button">
                        <span id="searchIcon">üîç</span>
                        <span id="searchSpinner" class="loading-spinner" style="display: none;"></span>
                    </button>
                </div>
            </div>

            <% if (error) { %>
                <div class="error-message" id="errorMessage">
                    <p><%= error %></p>
                </div>
            <% } %>

            <!-- Artists Grid -->
            <div id="artistsContainer">
                <% if (artists && artists.length > 0) { %>
                    <div class="artists-grid" id="artistsGrid">
                        <% artists.forEach(function(artist) { %>
                            <div class="artist-card">
                                <a href="/artist/<%= artist.unique_id %>" class="artist-link">
                                    <div class="artist-image">
                                        <% if (artist.profile_picture) { %>
                                            <img src="/uploads/profiles/<%= artist.profile_picture %>" 
                                                 alt="<%= artist.full_name %>" 
                                                 onerror="handleImageError(this)">
                                        <% } else { %>
                                            <div class="placeholder-image">
                                                <span>No Image</span>
                                            </div>
                                        <% } %>
                                    </div>
                                    <div class="artist-info">
                                        <h3 class="artist-name"><%= artist.full_name %></h3>
                                        <% if (artist.age) { %>
                                            <p class="artist-age"><i class="fas fa-birthday-cake"></i> <%= artist.age %> years old</p>
                                        <% } %>
                                        <% if (artist.location) { %>
                                            <p class="artist-location"><i class="fas fa-map-marker-alt"></i> <%= artist.location %></p>
                                        <% } %>
                                        <% if (artist.experienceYears > 0) { %>
                                            <p class="artist-experience"><i class="fas fa-clock"></i> <%= artist.experienceYears %> years of experience</p>
                                        <% } %>
                                        <% if (artist.shortBio) { %>
                                            <p class="artist-bio"><%= artist.shortBio %></p>
                                        <% } else { %>
                                            <p class="artist-bio">No bio available</p>
                                        <% } %>
                                        
                                        <!-- Artist Stats -->
                                        <div class="artist-stats">
                                            <div class="stat-item">
                                                <span class="stat-number"><%= artist.total_artworks %></span>
                                                <span class="stat-label">Artworks</span>
                                            </div>
                                            <div class="stat-item">
                                                <span class="stat-number"><%= artist.available_artworks %></span>
                                                <span class="stat-label">Available</span>
                                            </div>
                                            <div class="stat-item">
                                                <span class="stat-number"><%= artist.sold_artworks %></span>
                                                <span class="stat-label">Sold</span>
                                            </div>
                                        </div>
                                        
                                        <div class="view-profile-btn">
                                            <i class="fas fa-arrow-right"></i>
                                            View Profile
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="no-artists" id="noArtists">
                        <p>No artists found at the moment.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script src="/js/main.js"></script>
    <script>
        let searchTimeout;
        
        function handleImageError(img) {
            // Prevent infinite loading attempts
            if (img.dataset.failed) return;
            img.dataset.failed = 'true';
            
            // Replace with placeholder
            const placeholder = document.createElement('div');
            placeholder.className = 'placeholder-image';
            placeholder.innerHTML = '<span>No Image</span>';
            img.parentNode.replaceChild(placeholder, img);
        }
        
        // Search functionality
        async function searchArtists(query = '') {
            const searchBtn = document.getElementById('searchBtn');
            const searchIcon = document.getElementById('searchIcon');
            const searchSpinner = document.getElementById('searchSpinner');
            const artistsContainer = document.getElementById('artistsContainer');
            const errorMessage = document.getElementById('errorMessage');
            
            // Show loading state
            searchIcon.style.display = 'none';
            searchSpinner.style.display = 'inline-block';
            searchBtn.disabled = true;
            
            // Hide error message
            if (errorMessage) {
                errorMessage.style.display = 'none';
            }
            
            try {
                const response = await fetch(`/api/artists/search?q=${encodeURIComponent(query)}`);
                const data = await response.json();
                
                if (data.error) {
                    throw new Error(data.error);
                }
                
                // Update artists display
                updateArtistsDisplay(data.artists);
                
            } catch (error) {
                console.error('Search error:', error);
                artistsContainer.innerHTML = `
                    <div class="error-message">
                        <p>Error searching artists. Please try again.</p>
                    </div>
                `;
            } finally {
                // Reset button state
                searchIcon.style.display = 'inline-block';
                searchSpinner.style.display = 'none';
                searchBtn.disabled = false;
            }
        }
        
        function updateArtistsDisplay(artists) {
            const artistsContainer = document.getElementById('artistsContainer');
            
            if (artists.length === 0) {
                artistsContainer.innerHTML = `
                    <div class="no-artists">
                        <p>No artists found matching your search.</p>
                    </div>
                `;
                return;
            }
            
            let artistsHTML = '<div class="artists-grid" id="artistsGrid">';
            
            artists.forEach(artist => {
                const imageHTML = artist.profile_picture 
                    ? `<img src="/uploads/profiles/${artist.profile_picture}" 
                           alt="${artist.full_name}" 
                           onerror="handleImageError(this)">`
                    : `<div class="placeholder-image"><span>No Image</span></div>`;
                
                const bioHTML = artist.shortBio 
                    ? `<p class="artist-bio">${artist.shortBio}</p>`
                    : `<p class="artist-bio">No bio available</p>`;
                
                const ageHTML = artist.age 
                    ? `<p class="artist-age"><i class="fas fa-birthday-cake"></i> ${artist.age} years old</p>`
                    : '';
                
                const locationHTML = artist.location 
                    ? `<p class="artist-location"><i class="fas fa-map-marker-alt"></i> ${artist.location}</p>`
                    : '';
                
                const experienceHTML = artist.experienceYears > 0 
                    ? `<p class="artist-experience"><i class="fas fa-clock"></i> ${artist.experienceYears} years of experience</p>`
                    : '';
                
                artistsHTML += `
                    <div class="artist-card">
                        <a href="/artist/${artist.unique_id}" class="artist-link">
                            <div class="artist-image">
                                ${imageHTML}
                            </div>
                            <div class="artist-info">
                                <h3 class="artist-name">${artist.full_name}</h3>
                                ${ageHTML}
                                ${locationHTML}
                                ${experienceHTML}
                                ${bioHTML}
                                
                                <div class="artist-stats">
                                    <div class="stat-item">
                                        <span class="stat-number">${artist.total_artworks || 0}</span>
                                        <span class="stat-label">Artworks</span>
                                    </div>
                                    <div class="stat-item">
                                        <span class="stat-number">${artist.available_artworks || 0}</span>
                                        <span class="stat-label">Available</span>
                                    </div>
                                    <div class="stat-item">
                                        <span class="stat-number">${artist.sold_artworks || 0}</span>
                                        <span class="stat-label">Sold</span>
                                    </div>
                                </div>
                                
                                <div class="view-profile-btn">
                                    <i class="fas fa-arrow-right"></i>
                                    View Profile
                                </div>
                            </div>
                        </a>
                    </div>
                `;
            });
            
            artistsHTML += '</div>';
            artistsContainer.innerHTML = artistsHTML;
        }
        
        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const searchBtn = document.getElementById('searchBtn');
            
            // Search on keydown with debounce
            searchInput.addEventListener('keydown', function(e) {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    searchArtists(this.value);
                }, 300); // 300ms delay
            });
            
            // Search on button click
            searchBtn.addEventListener('click', function() {
                clearTimeout(searchTimeout);
                searchArtists(searchInput.value);
            });
            
            // Search on Enter key
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    clearTimeout(searchTimeout);
                    searchArtists(this.value);
                }
            });
        });
    </script>

    <!-- Enhanced Artist Card Styles -->
    <style>
        .artist-age, .artist-location, .artist-experience {
            font-size: 0.85rem;
            color: #666;
            margin: 0.3rem 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .artist-age i, .artist-location i, .artist-experience i {
            color: #667eea;
            font-size: 0.8rem;
        }
        
        .artist-stats {
            display: flex;
            justify-content: space-between;
            margin: 1rem 0;
            padding: 0.8rem;
            background: #f8f9fa;
            border-radius: 8px;
            border: 1px solid #e9ecef;
        }
        
        .stat-item {
            text-align: center;
            flex: 1;
        }
        
        .stat-number {
            display: block;
            font-size: 1.2rem;
            font-weight: bold;
            color: #667eea;
            margin-bottom: 0.2rem;
        }
        
        .stat-label {
            font-size: 0.75rem;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .artist-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .artist-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        
        .artist-info {
            padding: 1.5rem;
        }
        
        .artist-bio {
            color: #555;
            font-size: 0.9rem;
            line-height: 1.4;
            margin: 0.8rem 0;
        }
        
        .view-profile-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0.8rem 1rem;
            border-radius: 6px;
            text-align: center;
            margin-top: 1rem;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        
        .view-profile-btn:hover {
            background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            transform: translateY(-2px);
        }
        
        .view-profile-btn i {
            margin-left: 0.5rem;
            transition: transform 0.3s ease;
        }
        
        .artist-card:hover .view-profile-btn i {
            transform: translateX(3px);
        }
    </style>
</body>
</html>
